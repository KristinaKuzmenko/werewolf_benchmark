FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
# Use requirements-core.txt to avoid installing UI/dev dependencies
COPY requirements-core.txt .
RUN pip install --no-cache-dir -r requirements-core.txt

# Copy only purple agent code
COPY src/purple_agents/ ./src/purple_agents/

# Create __init__.py files
RUN touch src/__init__.py && \
    touch src/purple_agents/__init__.py

# Expose purple agent ports (will be overridden per instance)
EXPOSE 8100

# Environment variables (will be overridden per instance)
ENV AGENT_ID=baseline-agent
ENV AGENT_PORT=8100

# Run purple agent server
CMD ["python", "-m", "src.purple_agents.llm_agent.server", "--agent-id", "baseline-agent", "--host", "0.0.0.0", "--port", "8100"]
